class AdminController extends Controller
{
    public function addTeacher(Request $request)
    {
        return User::create([
            'name' => $request->name,
            'email' => $request->email,
            'password' => bcrypt('password'),
            'role' => 'teacher'
        ]);
    }

    public function removeStudent($id)
    {
        return User::where('id', $id)
                   ->where('role', 'student')
                   ->delete();
    }
}
